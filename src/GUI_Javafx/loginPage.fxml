<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="450.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1"
            fx:controller="GUI_Javafx.LoginController">
    <children>
        <Button layoutX="225.0" layoutY="286.0" mnemonicParsing="false" onAction="#actionSignIn" prefHeight="30.0"
                prefWidth="100.0" text="Sign in" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="200.0"/>
        <Button layoutX="423.0" layoutY="286.0" mnemonicParsing="false" onAction="#actionSignUp" prefHeight="30.0"
                prefWidth="100.0" text="Sign up" AnchorPane.bottomAnchor="100.0" AnchorPane.rightAnchor="200.0"/>
        <Label alignment="CENTER" layoutX="350.0" layoutY="59.0" prefHeight="30.0" prefWidth="100.0" text="Note Login"
               AnchorPane.topAnchor="50.0">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
        <GridPane layoutX="250.0" layoutY="150.0" prefHeight="80.0" AnchorPane.leftAnchor="50.0"
                  AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="150.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="345.0" minWidth="10.0" prefWidth="292.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="408.0" minWidth="10.0" prefWidth="408.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label alignment="CENTER" prefHeight="30.0" prefWidth="100.0" text="Username"
                       GridPane.halignment="RIGHT">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <Label alignment="CENTER" prefHeight="30.0" prefWidth="100.0" text="Password"
                       GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                    <font>
                        <Font size="16.0"/>
                    </font>
                </Label>
                <TextField fx:id="usernameTextField" maxWidth="200.0" prefHeight="30.0" prefWidth="200.0"
                           promptText="username" GridPane.columnIndex="1" GridPane.halignment="LEFT"/>
                <PasswordField fx:id="passwordField" maxWidth="200.0" prefHeight="30.0" prefWidth="200.0"
                               promptText="password" GridPane.columnIndex="1" GridPane.halignment="LEFT"
                               GridPane.rowIndex="1"/>
            </children>
        </GridPane>
    </children>
</AnchorPane>
